{
  "manifest_version": 2,
  "name": "Buy Direct",
  "version": "1.0.1",
  "description": "Shop ethically by finding products from manufacturers and independent retailers instead of Amazon. Supports local bookstores, sustainable brands, and small businesses.",
  "homepage_url": "https://github.com/Good-VibesOnly/buy-direct-extension",
  
  "permissions": [
    "activeTab",
    "https://www.amazon.com/*",
    "https://amazon.com/*"
  ],
  
  "browser_action": {
    "default_icon": {
      "48": "icon.png"
    },
    "default_title": "Find this product direct",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://amazon.com/*",
        "http://www.amazon.com/*",
        "http://amazon.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "48": "icon.png"
  }
}